<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <at.int3ro.robot.RobotCamera
        android:id="@+id/robot_activity_java_surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        opencv:camera_id="any"
        opencv:show_fps="true" />

    <TextView
        android:id="@+id/status_text_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:textColor="#FFF"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_h_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonThreshold"
                android:text="H -" />

            <Button
                android:id="@+id/btn_h_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonThreshold"
                android:text="H +" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_s_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonThreshold"
                android:text="S -" />

            <Button
                android:id="@+id/btn_s_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonThreshold"
                android:text="S +" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_v_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonThreshold"
                android:text="V -" />

            <Button
                android:id="@+id/btn_v_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonThreshold"
                android:text="V +" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>